// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  address String @id
  balance String
  isContract Boolean
}

model Transaction {
  hash String @id
  block Block @relation(fields: [blockNumber], references: [number], onDelete: Cascade)
  blockNumber BigInt
  transactionReceipt TransactionReceipt @relation(fields: [hash], references: [hash], onDelete: Cascade)

  chainId BigInt
  data String
  from String
  gasLimit BigInt
  gasPrice BigInt
  maxFeePerGas BigInt
  maxPriorityFeePerGas BigInt
  nonce BigInt
  to String?
  type BigInt
  value BigInt
  r String
  s String
  v BigInt
}

model TransactionReceipt {
  hash String @id
  transaction Transaction?
  logs Log[]

  blockHash String
  blockNumber BigInt
  contractAddress String?
  cumulativeGasUsed BigInt
  from String
  gasPrice BigInt
  gasUsed BigInt
  index BigInt
  logsBloom String
  status BigInt
  to String?
}

model Log {
  transactionHash String
  transactionIndex BigInt
  transactionReceipt TransactionReceipt @relation(fields: [transactionHash], references: [hash], onDelete: Cascade)
  index BigInt

  blockHash String
  blockNumber BigInt
  address String
  data String
  topics String[]

  @@id([transactionHash, index])
}


model Block {
  number BigInt @id
  transactions Transaction[]

  baseFeePerGas BigInt
  difficulty BigInt
  extraData String
  gasLimit BigInt
  gasUsed BigInt
  hash String
  miner String
  nonce String
  parentHash String
  timestamp BigInt
}
