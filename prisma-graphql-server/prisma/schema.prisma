// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  address String @id
  balance String
  isContract Boolean
  abi String?
}

model Transaction {
  hash String @id
  block Block @relation(fields: [blockNumber], references: [number], onDelete: Cascade)
  blockNumber BigInt
  transactionReceipt TransactionReceipt @relation(fields: [hash], references: [hash], onDelete: Cascade)

  accessList String[]
  chainId String
  data String
  from String
  gasLimit String
  gasPrice String
  maxFeePerGas String
  maxPriorityFeePerGas String
  nonce BigInt
  to String?
  type BigInt
  value String
  r String
  s String
  v BigInt
}

model TransactionReceipt {
  hash String @id
  transaction Transaction?
  logs Log[]

  blockHash String
  blockNumber BigInt
  contractAddress String?
  cumulativeGasUsed String
  from String
  gasPrice String
  gasUsed String
  index BigInt
  logsBloom String
  status BigInt
  to String?
}

model Log {
  transactionHash String
  transactionIndex BigInt
  transactionReceipt TransactionReceipt @relation(fields: [transactionHash], references: [hash], onDelete: Cascade)
  index BigInt

  blockHash String
  blockNumber BigInt
  address String
  data String
  topics String[]

  @@id([transactionHash, index])
}

model Block {
  number BigInt @id
  transactions Transaction[]

  baseFeePerGas String
  difficulty String
  extraData String
  gasLimit String
  gasUsed String
  hash String
  miner String
  nonce String
  parentHash String
  timestamp BigInt
}
