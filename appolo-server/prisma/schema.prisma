// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PROD")
}

model Account {
  address String @id
  balance String
  isContract Boolean
}

model Transaction {
  hash String @id
  block Block @relation(fields: [blockNumber], references: [number], onDelete: Cascade)
  blockNumber String
  transactionReceipt TransactionReceipt @relation(fields: [hash], references: [hash], onDelete: Cascade)

  chainId String
  data String
  from String
  gasLimit String
  gasPrice String
  maxFeePerGas String
  maxPriorityFeePerGas String
  nonce String
  to String?
  type String
  value String
  r String
  s String
  v String
}

model TransactionReceipt {
  hash String @id
  transaction Transaction?
  logs Log[]

  blockHash String
  blockNumber String
  contractAddress String?
  cumulativeGasUsed String
  from String
  gasPrice String
  gasUsed String
  index String
  logsBloom String
  status String
  to String?
}

model Log {
  transactionHash String
  transactionIndex String
  transactionReceipt TransactionReceipt @relation(fields: [transactionHash], references: [hash], onDelete: Cascade)
  index String

  blockHash String
  blockNumber String
  address String
  data String
  topics String[]

  @@id([transactionHash, index])
}


model Block {
  number String @id
  transactions Transaction[]

  baseFeePerGas String
  difficulty String
  extraData String
  gasLimit String
  gasUsed String
  hash String
  miner String
  nonce String
  parentHash String
  timestamp String
}
