{
  "name": "hardhat-data-aggregator",
  "version": "1.0.0",
  "description": "aggregates hardhat node data",
  "author": "axw",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^4.9.5",
    "@types/node": "^18.14.6",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "ts-node": "^10.9.1",
    "ts-mocha": "^10.0.0",
    "nodemon": "^2.0.21",
    "rimraf": "^4.3.1",
    "mocha": "^10.2.0",
    "chai": "^4.3.7",
    "ethers": "^6.1.0",
    "@typechain/ethers-v5":"^10.1.0",
    "@prisma/client": "^4.11.0",
    "prisma": "^4.11.0"

  },
  "scripts": {
    "ts:start:dev": "npx nodemon",
    "ts:rebuild": "rimraf ./build && tsc --project tsconfig.build.json", 
    "ts:build": "tsc --project tsconfig.build.json", 
    "ts:run-script": "ts-node",
    "ts:test": "ts-mocha test/*.ts",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "prisma:generate": "npx prisma generate",
    "prisma:schema:update": "yarn prisma:migrate; yarn prisma:generate",
    "prisma:studio": "npx prisma studio"
  }
}



