{
  "name": "hardhat-block-explore",
  "version": "1.0.0",
  "description": "a block explore for hardhat local dev",
  "author": "axw",
  "license": "MIT",
  "scripts": {
    "build:hardhat:only": "docker compose -f ./base-compose.yaml -f ./hardhat-node/docker-compose.yaml build --progress=plain",
    "up:hardhat:only": "docker compose -f ./base-compose.yaml -f ./hardhat-node/docker-compose.yaml up",
    "down:hardhat:only": "docker compose -f ./base-compose.yaml -f ./hardhat-node/docker-compose.yaml up",
    "up:postgresql:only": "docker compose -f ./base-compose.yaml -f ./postgres/docker-compose.yaml up",
    "down:postgresql:only": "docker compose -f ./base-compose.yaml -f ./postgres/docker-compose.yaml down",
    "up:postgresql:adminer:only": "docker compose -f ./base-compose.yaml -f ./postgres/docker-compose.yaml up -d adminer"
  }
}